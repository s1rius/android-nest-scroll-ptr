<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.auptr.ptr_support_design">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.DesignDemo">
        <activity android:name="wtf.s1.android.ptr.demo.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="wtf.s1.android.ptr.demo.md.CheeseDetailActivity"
            android:parentActivityName="wtf.s1.android.ptr.demo.MainActivity"
            android:theme="@style/Theme.DesignDemo">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="wtf.s1.android.ptr.demo.MainActivity" />
        </activity>

    </application>

</manifest>